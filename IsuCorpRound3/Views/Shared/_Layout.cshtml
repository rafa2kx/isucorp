<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div id="header" class="navbar navbar-inverse navbar-nav">

    <div class="hidden-xs pull-right lang">
        
            @{ var lang = ViewBag.culture.Equals("en") ? "es" : "en"; }
            <a href="/Page/SetLanguage?language=@lang">@Resources.LANGUAGE: <strong>@ViewBag.culture.ToUpper()</strong></a>
        
    </div>

    <img src="../../Content/images/banner.png" width="100%"/>
    <div class="page-header">
        <div class="container">
            @RenderSection("viewHeader", false)
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year -IsuCorp Test Application</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/knockout")
@RenderSection("scripts", false)

</body>
</html>